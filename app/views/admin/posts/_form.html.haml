.wrapper
  = simple_form_for [ :admin, @post ] do |f|
    = f.input :title, label: false, placeholder: "Title"
    = f.input :content, label: false, placeholder: "Description"
    = f.input :approved, label: 'Approved', wrapper_html: { class: 'inline' }
    .pull-right= f.submit 'Submit', class: 'button'
    .clear