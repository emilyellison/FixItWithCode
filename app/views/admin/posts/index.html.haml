%h1 
  Posts
  = link_to 'NEW POST', new_admin_post_url, class: 'btn'
  
%table

  %thead
    %tr
      %th Title
      %th Author
      %th Approval
      %th
      
  %tbody
    - @posts.each do |post|
      %tr
        %td= post.title
        %td= post.author.name
        %td= post.approval
        %td
          = link_to 'Show', admin_post_url(post)
          = link_to 'Edit', edit_admin_post_url(post)
          = link_to 'Destroy', admin_post_url(post), method: :delete, data: { confirm: 'Are you sure you want to delete this post?' }