%h1 
  Posts
  .pull-right= link_to '+', new_admin_post_url
  .clear
  
%table

  %thead
    %tr
      %th Title
      %th Author
      %th Approval
      %th
      
  %tbody
    - @posts.each do |post|
      %tr
        %td= post.title
        %td= post.author.name
        %td= post.approval
        %td
          = link_to 'Show', admin_post_url(post)
          = link_to 'Edit', edit_admin_post_url(post)
          = link_to 'X', admin_post_url(post), method: :delete, data: { confirm: 'Are you sure you want to delete this post?' }