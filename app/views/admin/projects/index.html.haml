%h1 
  Projects
  = link_to 'NEW PROJECT', new_admin_project_path, class: 'btn'
  
%table

  %thead
    %tr
      %th Title
      %th Author
      %th Approval
      %th
      
  %tbody
    - @projects.each do |project|
      %tr
        %td= project.title
        %td= project.administrator.name
        %td= project.approval
        %td
          = link_to 'Show', admin_project_url(project)
          = link_to 'Edit', edit_admin_project_url(project)
          = link_to 'Destroy', admin_project_url(project), method: :delete, data: { confirm: 'Are you sure you want to delete this project?' }