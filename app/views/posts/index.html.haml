#posts
  #index
  
    .quarter.grid
      .column
        = render 'shared/administrators'
    
      .triple.column
        - @posts.each do |post|
          .wrapper.white.left.right.top
          
            %h1.ribbon= link_to post.title.upcase, post_url(post)
            = truncate(convert_to_markdown(post.content), length: 400, separator: ' ').html_safe
            = link_to 'READ MORE &rarr;'.html_safe, post_url(post)
            
            %p.code.right.grey
              Written by 
              = link_to post.author.name, administrator_url(first_name: post.author.first_name)
              on 
              = pretty_date post.updated_at

        = paginate @posts
      
      .clear
      
